{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "root": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [{ "include": "shared/mails/templates/**/*", "outDir": "dist/src", "watchAssets": true }],
    "watchAssets": true,
    "plugins": ["@nestjs/swagger"]
  }
}
